# Application
APP_NAME="Stock Guide API"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=True
SECRET_KEY="your-secret-key-change-in-production"

# Database
DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5432/stock_guide"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL="redis://localhost:6379/0"
REDIS_CACHE_TTL=300  # 5 minutes

# OpenAI
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="gpt-4-turbo-preview"

# Stock Data APIs
ALPHA_VANTAGE_API_KEY="your-alpha-vantage-key"
FMP_API_KEY="your-financial-modeling-prep-key"  # Financial Modeling Prep
NEWS_API_KEY="your-news-api-key"

# Pinecone (Vector Database for RAG)
PINECONE_API_KEY="your-pinecone-key"
PINECONE_ENVIRONMENT="us-west1-gcp"
PINECONE_INDEX_NAME="stock-news-embeddings"

# CORS
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Scheduler (Cron Jobs)
DAILY_KEYWORD_CRON="50 8 * * *"  # 매일 8시 50분 (KST 기준으로 조정 필요)
